<% error = @lesson.errors.include?(:course_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label "Course", :class => 'control-label' %>
  <div class='controls'>
    <% @options_course = Course.all %>
    <%= f.select :course_id, :collection => @options_course , :fields  => [:name, :id],:class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:course_id) : "...the course to be taught.." %></span>
  </div>
</fieldset>
<% error = @lesson.errors.include?(:start_date) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :start_date, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :start_date, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:start_date) : "..in the format: yy-mm-dd.." %></span>
  </div>
</fieldset>
<% error = @lesson.errors.include?(:end_date) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :end_date, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :end_date, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:end_date) : "..in the format: yy-mm-dd.." %></span>
  </div>
</fieldset>
<% error = @lesson.errors.include?(:lesson_cost) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label "Lesson cost", :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :lesson_cost, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:lesson_cost) : "...how much this lesson will cost..." %></span>
  </div>
</fieldset>
<% error = @lesson.errors.include?(:account_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label "Trainer", :class => 'control-label' %>
  <div class='controls'>
    <% @options_account = Account.where(:role=> "trainer") %>
    <%= f.select :account_id, :collection => @options_account , :fields  => [:name, :id],:class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:account_id) : "...who'll teach the lesson?..." %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:lessons, :index), :class => 'btn btn-default' %>
</div>